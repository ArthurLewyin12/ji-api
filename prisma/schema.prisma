generator client {
  provider = "prisma-client"
  output   = "./generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Submission {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // --- Infos personnelles ---
  nom       String
  prenoms   String
  age       Int
  annee     String @default("L1")
  email     String @unique
  telephone String

  // --- Matching ---
  hobbies                 String[]
  personnalite            String
  specialisationInteresse String[]
  objectifsEtudes         String[]
  styleApprentissage      String
  niveauTechnique         String
  participationAsso       String
  attentesParrainage      String

  // --- Préférences ---
  genreParrain      String
  typeRelation      String
  frequenceContact  String
  modeCommunication String
  commentaires      String?
  accepteConditions Boolean

  // --- Photo ---
  photoPath String?

  @@unique([nom, prenoms])
}
